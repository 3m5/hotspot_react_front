{
	"name": "3m5/hotspot-react-front",
	"type": "typo3-cms-extension",
	"description": "This extension provides the hotspot content element",
	"authors": [
		{
			"name": "Adam Koppe",
			"role": "Developer"
		},
		{
			"name": "Michael Kersten",
			"role": "Developer"
		}
	],
	"license": "GPL-2.0-or-later",
	"require": {
		"typo3/cms-fluid-styled-content": "^10.4",
		"typo3/cms-core": "^10.4",
		"3m5/hotspot-wizard": "@dev"
	},
	"require-dev": {
		"typo3/testing-framework": "^6.8"
	},
	"autoload": {
		"psr-4": {
			"DMF\\HotspotReact\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DMF\\HotspotReact\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/hotspot-react": "self.version"
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"scripts": {
		"post-autoload-dump": [
			"TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
		],
		"prepare-release": [
			"rm .gitignore",
			"rm .gitattributes",
			"rm -rf .github",
			"rm -rf .Build",
			"rm .editorconfig"
		]
	},
	"extra": {
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/public",
			"extension-key": "hotspot_react"
		}
	}
}
